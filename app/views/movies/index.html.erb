<h1>Movies</h1>

<div class="container">
  <ul>
    <%@movies.each do |movie|%>
    <li><%=link_to movie.title , movie_path(movie) %></li>
      <li><%= movie.genre %></li>
      <li><%= movie.rating %></li>
      <li><%= movie.synopsis %></li>
  <hr>
    <%end%>
  </ul>
</div>

<h3>Five Most Recently Created Movies</h3>
<ul>
  <%@movies.five_most_recent.each do |movie|%>
  <li><%=movie.title%></li>
  <% end %>

</ul>
<p>
  <%= link_to 'New Movie', new_movie_path  %>
</p>
